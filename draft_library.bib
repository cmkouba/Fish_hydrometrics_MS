@article{AcremanEtAlEnvironmental2014,
  title = {Environmental Flows for Natural, Hybrid, and Novel Riverine Ecosystems in a Changing World},
  author = {Acreman, Mike and Arthington, Angela H and Colloff, Matthew J and Couch, Carol and Crossman, Neville D and Dyer, Fiona and Overton, Ian and Pollino, Carmel A and Stewardson, Michael J and Young, William},
