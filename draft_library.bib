@article{SinnathambyEtAlEcohydrological2018,
  title = {Ecohydrological Index, Native Fish, and Climate Trends and Relationships in the {{Kansas River}} Basin},
  author = {Sinnathamby, Sumathy and Douglas-Mankin, Kyle R. and Muche, Muluken E. and Hutchinson, Stacy L. and Anandhi, Aavudai},
