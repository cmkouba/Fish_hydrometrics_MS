@article{Sadat-NooriEtAlGroundwater2015,
  title = {Groundwater Discharge into an Estuary Using Spatially Distributed Radon Time Series and Radium Isotopes},
  author = {{Sadat-Noori}, Mahmood and Santos, Isaac R. and Sanders, Christian J. and Sanders, Luciana M. and Maher, Damien T.},
  year = {2015},
