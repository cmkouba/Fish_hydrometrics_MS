}

@article{ArthingtonEtAlTEMPORARY2014,
  title = {{{TEMPORARY RIVERS}}: {{LINKING ECOHYDROLOGY}}, {{ECOLOGICAL QUALITY AND RECONCILIATION ECOLOGY}}},
