@article{YarnellEtAlFunctional2020,
  title = {A Functional Flows Approach to Selecting Ecologically Relevant Flow Metrics for Environmental Flow Applications},
  author = {Yarnell, Sarah M. and Stein, Eric D. and Webb, J. Angus and Grantham, Theodore and Lusardi, Rob A. and Zimmerman, Julie and Peek, Ryan A. and Lane, Belize A. and Howard, Jeanette and Sandoval-Solis, Samuel},
  year = {2020},
