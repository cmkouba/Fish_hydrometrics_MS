file = {:C$\backslash$:/Users/Claire/Dropbox/Documents/Mendeley Citation Library/Strayer{\_}and{\_}Dudgeon-2010-J.N.Am.Bethol.Soc.pdf:pdf},
issn = {08873593},
journal = {Journal of the North American Benthological Society},
keywords = {Climate change,Endangered species,Extinction,Fresh water,Limnology,North American Benthological Society},
number = {1},
pages = {344--358},
title = {{Freshwater biodiversity conservation: Recent progress and future challenges}},
volume = {29},
