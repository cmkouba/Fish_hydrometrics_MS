keywords = {Ecological flow regime,Ecological limit functions,Hydrologic alteration,Tennessee River,Wedge distributions},
number = {5},
pages = {1262--1280},
title = {{Ecological limit functions relating fish community response to hydrologic departures of the ecological flow regime in the Tennessee River basin, United States}},
