author = {Wheeler, Kit and Wenger, Seth J. and Freeman, Mary C.},
doi = {10.1111/fwb.13001},
file = {:C$\backslash$:/Users/Claire/Dropbox/Documents/Mendeley Citation Library/Wheeler{\_}et{\_}al-2018-Freshwater{\_}Biology.pdf:pdf},
issn = {13652427},
journal = {Freshwater Biology},
keywords = {demographic models,environmental flows,metapopulation dynamics,river management,stream fish},
number = {8},
