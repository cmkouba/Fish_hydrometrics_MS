author = {Arthington, Angela H. and Kennen, Jonathan G. and Stein, Eric D. and Webb, J. Angus},
doi = {10.1111/fwb.13108},
file = {:C$\backslash$:/Users/Claire/Dropbox/Documents/Mendeley Citation Library/Arthington{\_}et{\_}al-2018-Freshwater{\_}Biology.pdf:pdf},
issn = {13652427},
journal = {Freshwater Biology},
keywords = {ecohydrology,ecosystem services,environmental flows,river restoration,social–ecological resilience},
