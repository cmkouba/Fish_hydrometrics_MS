issn = {00465070},
journal = {Freshwater Biology},
keywords = {Endangered species,Environmental flow,Hydrologic variability,Salmonids,Seasonality,Water resource management},
number = {SUPPL. 1},
pages = {188--204},
title = {{Climatic influences and anthropogenic stressors: An integrated framework for streamflow management in Mediterranean-climate California, U.S.A.}},
volume = {55},
